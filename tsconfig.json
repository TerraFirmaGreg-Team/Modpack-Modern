{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,

        "target": "es2020",
        "lib": ["ES2020"],
        "rootDirs": [
            "probe/generated",
            "probe/user",
            "server_scripts",
            "startup_scripts",
            "client_scripts"
        ],

        "alwaysStrict": true,
        "allowUnreachableCode": false,

        // Type checking options, only enable if probeJS installed
        
        "noCheck": true

        // "strict": true,
        // "noImplicitAny": true,
        // "noImplicitReturns": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true
    }
}